{
  "name": "langtrain-ai",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*",
    "npm"
  ],
  "scripts": {
    "bootstrap": "npm install",
    "build": "npm run -w packages/cli build && npm run -w packages/langtune build && npm run -w packages/langvision build",
    "test": "npm run -w packages/cli test || true",
    "lint": "echo 'add linter if needed'",
    "prepare-release": "bash scripts/release-prep.sh",
    "release": "npm run build && changeset publish",
    "version": "npx ts-node scripts/sync-versions.ts && git add pypi"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.10.1",
    "@types/yargs": "^17.0.35",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "repository": "https://github.com/langtrain-ai/langtrain-ai.git"
}
